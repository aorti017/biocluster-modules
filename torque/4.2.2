#%Module1.0#####################################################################
##
## Torque modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds Torque to your path"
}

module-whatis   "torque-4.2.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/torque/4.2.2/bin:${iigb_modules}/torque/4.2.2/sbin
prepend-path    MANPATH         ${iigb_modules}/torque/4.2.2/share/man
prepend-path    C_INCLUDE_PATH  ${iigb_modules}/torque/4.2.2/include
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/torque/4.2.2/lib

module          use             ${modules_dir}

