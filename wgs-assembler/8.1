#%Module1.0#####################################################################
##
## wgs-assembler modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\twgs-assembler. Adds Celera WGS assembler for assembly merging to your path"
}

module-whatis	"wgs-assembler-8.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULESHOME)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path	PATH	${iigb_modules}/wgs-assembler/8.1/Linux-amd64/bin

module		use     ${modules_dir}
