#%Module1.0#####################################################################
##
## hmmer modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds hmmer 2.3.2 to your path"
}

module-whatis   "hmmer-2.3.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/hmmer/2.3.2/bin
prepend-path    MANPATH         ${iigb_modules}/hmmer/2.3.2/share/man
prepend-path    CPATH           ${iigb_modules}/hmmer/2.3.2/include
prepend-path    LIBRARY_PATH    ${iigb_modules}/hmmer/2.3.2/lib
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/hmmer/2.3.2/lib

module          use             ${modules_dir}

