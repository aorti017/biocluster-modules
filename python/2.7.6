#%Module1.0#####################################################################
##
## Python modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPython - Adds Python 2.7 to your path"
}

module-whatis	"python-2.7.6"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set     prefix          ${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH   		${iigb_modules}/python/2.7.6/bin
prepend-path    CPATH           ${iigb_modules}/python/2.7.6/include
prepend-path    LIBRARY_PATH    ${iigb_modules}/python/2.7.6/lib
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/python/2.7.6/lib
prepend-path    MANPATH  	${iigb_modules}/python/2.7.6/share/man

module		use		${modules_dir}

