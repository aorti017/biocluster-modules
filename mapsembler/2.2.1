proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds mapsembler2 2.2.1 (run_mapsembler2_pipeline.sh)  to your path"
}

module-whatis   "mapsembler2-2.2.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/mapsembler/2.2.1/bin
prepend-path    PATH            ${iigb_modules}/mapsembler/2.2.1

module          use             ${modules_dir}

