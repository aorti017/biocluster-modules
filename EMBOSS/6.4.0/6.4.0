#%Module1.0#####################################################################
##
## EMBOSS modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds EMBOSS 6.4.0 to your path"
}

module-whatis   "EMBOSS-6.4.0"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/EMBOSS/6.4.0/bin
prepend-path    MANPATH         ${iigb_modules}/EMBOSS/6.4.0/share/man
prepend-path    CPATH           ${iigb_modules}/EMBOSS/6.4.0/include
prepend-path    LIBRARY_PATH    ${iigb_modules}/EMBOSS/6.4.0/lib
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/EMBOSS/6.4.0/lib

module          use             ${modules_dir}

