#%Module1.0#####################################################################
##
## meme modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds meme to your path"
}

module-whatis   "meme-4.9.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/meme/4.9.1/bin
prepend-path    PERL5LIB        ${iigb_modules}/meme/4.9.1/lib/perl
prepend-path    PYTHONPATH      ${iigb_modules}/meme/4.9.1/lib/python

module          use             ${modules_dir}

