#%Module1.0#####################################################################
##
## augustus modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds augustus to your path"
}

module-whatis   "augustus-3.0.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/augustus/3.0.2/scripts
prepend-path    PATH            ${iigb_modules}/augustus/3.0.2/bin
module          use             ${modules_dir}

